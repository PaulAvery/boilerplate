<header class="jumbotron">
	<div class="container">
		<h1>Docco {{#if layout.user}}({{layout.user.name}}){{/if}}</h1>
	</div>
</header>
<div id="wrapper">
	<div id="nav" class="row">
		<div id="navigation" class="col-sm-3">
			<div class="panel panel-default">
				<div diff-id="header" class="panel-heading">Children<span class="caret"></span></div>
				<div diff-id="list" class="list-group anim {{#if folder}}open{{/if}}">
				{{#each folders}}
					<a diff-id="d{{name}}" href="{{name}}/" class="list-group-item"><span class="glyphicon glyphicon-folder-close"></span> {{name}}</a>
				{{/each}}
				{{#each files}}
					<a diff-id="f{{name}}" href="{{name}}" class="list-group-item anim"><span class="glyphicon glyphicon-file"></span> {{name}}</a>
				{{/each}}
				</div>
			</div>
		</div>
		<div id="breadcrumb" class="col-sm-9">
			<ol class="breadcrumb">
				{{#each path}}
					<li diff-id="{{path}}">
						{{#if last}}
						<span>{{name}}</span>
						{{else}}
						<a href="{{path}}">{{name}}</a>
						{{/if}}
					</li>
				{{/each}}
			</ol>
		</div>
	</div>
	<div id="content">
		<div class="content" diff-id="{{layout.path}}">
			{{#each data}}
			<div class="row">
				<div class="comments col-sm-3">
					{{markdown docsText}}
				</div>
				<div class="code col-sm-9">
					<pre><code>{{highlight codeText}}</code></pre>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>